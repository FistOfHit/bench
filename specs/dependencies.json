      "current_version": "580",
      "source": {
        "check_method": "nvidia_apt_repo",
        "package_pattern": "^Package: nvidia-driver-([0-9]+)$",
        "version_extract": "highest_match"
      },
      "update_targets": [
        "scripts/bootstrap.sh"
      ],
      "notes": "Fallback driver series in bootstrap.sh. Updated with -server suffix preserved."
    },
    {
